<%= form_for @item, :html => { :multipart => true } do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :categories %>
    <%= form.collection_select :category_ids, Category.all, :id, :name, {}, {multiple: true } %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div class="button">
    <%= form.submit %>
  </div>
<% end %>
