<div class="container">
  <div class="col-sm-12">
    <%= form_for(@user, url: login_path, method: :post) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Login", class: "form-control btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
