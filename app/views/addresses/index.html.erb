  <div class="panel panel-default">
    <div class="panel-heading"><h2>Addresses</h2></div>
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th class="text-center">Street number</th>
            <th class="text-center">Street name</th>
            <th class="text-center">City</th>
            <th class="text-center">State</th>
            <th class="text-center">Zip Code</th>
            <th class="text-center"></th>
            <th class="text-center">Actions</th>
            <th class="text-center"></th>
          </tr>
        </thead>

        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.street_number %></td>
              <td><%= address.street_name %></td>
              <td><%= address.city %></td>
              <td><%= address.state %></td>
              <td><%= address.zip_code %></td>
              <td><%= link_to "Show", address %></td>
              <td><%= link_to "Edit", edit_address_path(address)%></td>
              <td><%= link_to "Destroy", address, method: :delete, id: "delete", data: { confirm: "Are you sure?"} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <br>
  </div>
</div>

<%= link_to "New Address", new_address_path %>

